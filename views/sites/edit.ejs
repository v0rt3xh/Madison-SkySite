<%layout('layout/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Current Site</h1>
    <div class="col-6 offset-3">
        <form action="/sites/<%=inqurySite._id%>?_method=PUT" method="POST" novalidate class="ValidatedForm" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="site[title]" value="<%= inqurySite.title%>" required>
                <div class="valid-feedback">
                    Looks great!
                </div>               
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="site[location]" value="<%= inqurySite.location%>" required>
                <div class="valid-feedback">
                    Looks great!
                </div>
                <div class="form-check-inline">
                    <input type="checkbox" id="isRawCoordinate" name="rawCoordinate" value="1" <%= inqurySite.isRawLocation ? "checked" : "" %>>
                </div>
                <label for="isRawCoordinate">Using Coordinates</label>
                <span><i>(Latitude, Longitude)</i></span>               
            </div>
            <div class="mb-3">
                <label class="form-label" for="checkboxs"><b>Events: </b></label>
                <div class="form-check form-check-inline" id="checkboxs">
                    <input class="form-check-input" type="checkbox" id="sunriseBox" name="isSunrise" value="true" <%= inqurySite.isSunrise ? "checked" : "" %> >
                    <label class="form-check-label" for="sunriseBox">&#9788 Sunrise</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="sunsetBox" name="isSunset" value="true" <%= inqurySite.isSunset ? "checked" : "" %>>
                    <label class="form-check-label" for="sunsetBox">&#9789 Sunset</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="starBox" name="isStar" value="true" <%= inqurySite.isStargaze ? "checked" : "" %>>
                    <label class="form-check-label" for="starBox">&#9734 Stargaze</label>
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Entry Fee</label>                
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="site[price]" placeholder="0.0" aria-label="price" 
                    aria-describedby="price-label" value="<%= inqurySite.price%>" required>
                    <div class="valid-feedback">
                        Looks great!
                    </div>   
                </div>
            </div>
            <div class="mb-3">
                <label for="imageMultiple" class="form-label">Add more images</label>
                <input class="form-control" type="file" id="imageMultiple" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="site[description]" required><%=inqurySite.description%></textarea> 
                <div class="valid-feedback">
                    Looks great!
                </div>   
            </div>
            <div class="mb-3">
                <% inqurySite.images.forEach(function(img, i) {%>
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete this image</label>
                <% })%>

            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Sites</button>
            </div>
        </form>
        <a href="/sites/<%=inqurySite._id%> ">Back to current site</a>
    </div>
</div>


