<%layout('layout/boilerplate')%>
<div class="row">
    <h1 class="text-center">New SkySite</h1>
    <div class="col-6 offset-3">
        <form action="/sites" method="POST" novalidate class="ValidatedForm" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title"><b>Title</b></label>
                <input class="form-control" type="text" id="title" name="site[title]" required>
                <div class="valid-feedback">
                    Looks great!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location"><b>Location</b></label>
                <input class="form-control" type="text" id="location" name="site[location]" required>
                <div class="valid-feedback">
                    Looks great!
                </div>
                
                <div class="form-check-inline">
                    <input type="checkbox" id="isRawCoordinate" name="rawCoordinate" value="1">
                </div>
                <label for="isRawCoordinate">Using Coordinates</label>
                <span><i>(Latitude, Longitude)</i></span> 
            </div>
            <div class="mb-3">
                <label class="form-label" for="checkboxs"><b>Events: </b></label>
                <div class="form-check form-check-inline" id="checkboxs">
                    <input class="form-check-input" type="checkbox" id="sunriseBox" name="isSunrise" value="true">
                    <label class="form-check-label" for="sunriseBox">&#9788 Sunrise</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="sunsetBox" name="isSunset" value="true">
                    <label class="form-check-label" for="sunsetBox">&#9789 Sunset</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="starBox" name="isStar" value="true">
                    <label class="form-check-label" for="starBox">&#9734 Stargaze</label>
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price"><b>Entry Fee</b></label>                
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="site[price]" 
                    placeholder="0.0" aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">
                        Looks great!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="imageMultiple" class="form-label"><b>Upload images</b></label>
                <input class="form-control" type="file" id="imageMultiple" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description"><b>Description</b></label>
                <textarea class="form-control" type="text" id="description" name="site[description]" required ></textarea> 
                <div class="valid-feedback">
                    Looks great!
                </div>            
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Site</button>
            </div>
        </form>
    </div>
</div>
